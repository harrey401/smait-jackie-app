<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_dark">

    <!-- ==================== IDLE SCREEN ==================== -->
    <FrameLayout
        android:id="@+id/idleScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <!-- Particle canvas (custom drawn in code) -->
        <View
            android:id="@+id/particleCanvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Outer pulse ring -->
        <View
            android:id="@+id/pulseRingOuter"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:background="@drawable/pulse_ring_outer"
            android:alpha="0.15" />

        <!-- Pulse ring -->
        <View
            android:id="@+id/pulseRing"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:background="@drawable/pulse_ring"
            android:alpha="0.25" />

        <!-- SJSU Logo top-left with glow -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="36dp"
            android:layout_marginTop="28dp">

            <ImageView
                android:id="@+id/sjsuLogo"
                android:layout_width="140dp"
                android:layout_height="130dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sjsu_logo"
                android:contentDescription="SJSU Logo"
                android:elevation="4dp" />
        </FrameLayout>

        <!-- BioRob Logo top-right with glow -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="28dp">

            <ImageView
                android:id="@+id/biorobLogo"
                android:layout_width="190dp"
                android:layout_height="130dp"
                android:scaleType="fitCenter"
                android:src="@drawable/biorob_logo"
                android:contentDescription="BioRob Lab Logo"
                android:elevation="4dp" />
        </FrameLayout>

        <!-- Center content -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/jackieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jackie_title"
                android:textColor="@color/text_primary"
                android:textSize="120sp"
                android:fontFamily="sans-serif-thin"
                android:letterSpacing="0.2"
                android:shadowColor="#220066FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="20" />

            <TextView
                android:id="@+id/approachText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/approach_message"
                android:textColor="@color/text_secondary"
                android:textSize="28sp"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.05" />
        </LinearLayout>

        <!-- Wave visualization at bottom -->
        <LinearLayout
            android:id="@+id/waveContainer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="80dp"
            android:gravity="center|bottom"
            android:orientation="horizontal"
            android:paddingStart="80dp"
            android:paddingEnd="80dp" />

        <!-- Powered by text bottom center -->
        <TextView
            android:id="@+id/poweredByText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="28dp"
            android:text="@string/powered_by"
            android:textColor="@color/text_muted"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.1" />

        <!-- Connection status dot bottom-right -->
        <View
            android:id="@+id/idleConnectionDot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="28dp"
            android:background="@drawable/circle_dot" />

    </FrameLayout>

    <!-- ==================== ACTIVE/ENGAGED SCREEN ==================== -->
    <LinearLayout
        android:id="@+id/activeScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:baselineAligned="false"
        android:alpha="0">

        <!-- Left: Conversation (55%) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="55"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Status bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_status_bar"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <View
                    android:id="@+id/statusDot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/circle_dot" />

                <TextView
                    android:id="@+id/robotStatusText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="@string/status_connected"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/sessionTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_muted"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif"
                    android:text="0:00" />

                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/accent_amber"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Chat messages -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_chat_area"
                android:clipToPadding="false"
                android:padding="8dp"
                android:overScrollMode="never" />

            <!-- Selfie button -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/selfieButton"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_selfie_button"
                    android:gravity="center"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:text="@string/selfie_button"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.03"
                    android:clickable="true"
                    android:focusable="true" />
            </FrameLayout>
        </LinearLayout>

        <!-- Right: Camera preview (45%) -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45"
            android:padding="16dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_camera_frame"
                android:clipChildren="true"
                android:clipToOutline="true">

                <TextureView
                    android:id="@+id/cameraPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Live indicator overlay -->
                <TextView
                    android:id="@+id/liveIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="16dp"
                    android:background="@drawable/bg_live_badge"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="@string/live_indicator"
                    android:textColor="#FFFF3B30"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- ==================== SELFIE OVERLAY ==================== -->
    <FrameLayout
        android:id="@+id/selfieOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark"
        android:visibility="gone">

        <!-- Flash overlay -->
        <View
            android:id="@+id/flashOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:alpha="0"
            android:visibility="gone" />

        <!-- Countdown text -->
        <TextView
            android:id="@+id/countdownText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/countdown_text"
            android:textSize="250sp"
            android:fontFamily="sans-serif-thin"
            android:shadowColor="#220066FF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="40"
            android:visibility="gone" />

        <!-- Photo preview -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/selfiePreviewCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="60dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@color/white"
            android:visibility="gone">

            <ImageView
                android:id="@+id/selfiePreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:contentDescription="Selfie preview" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Selfie action buttons -->
        <LinearLayout
            android:id="@+id/selfieActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="48dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/retakeButton"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bg_retake_button"
                android:gravity="center"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="@string/selfie_retake"
                android:textColor="@color/accent_blue"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:background="@drawable/bg_save_button"
                android:gravity="center"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="@string/selfie_save"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </FrameLayout>

    <!-- ==================== GEAR BUTTON (always visible) ==================== -->
    <TextView
        android:id="@+id/gearButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="⚙"
        android:textSize="28sp"
        android:textColor="#88FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp" />

    <!-- ==================== CONFIG OVERLAY ==================== -->
    <FrameLayout
        android:id="@+id/configOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="20dp">

        <LinearLayout
            android:id="@+id/configSheet"
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_settings_sheet"
            android:orientation="vertical"
            android:padding="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Config"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="20dp" />

            <!-- Slider 1: VAD Threshold -->
            <TextView
                android:id="@+id/vadLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Noise Sensitivity (VAD): 0.50"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />
            <SeekBar
                android:id="@+id/vadSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="60"
                android:progress="20"
                android:progressTint="#00BCD4"
                android:thumbTint="#00BCD4" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOW ← → HIGH"
                android:textColor="#666666"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Slider 2: ASD Min Score -->
            <TextView
                android:id="@+id/asdLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Speaker Strictness (ASD): 0.20"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />
            <SeekBar
                android:id="@+id/asdSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="8"
                android:progress="2"
                android:progressTint="#00BCD4"
                android:thumbTint="#00BCD4" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOOSE ← → STRICT"
                android:textColor="#666666"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Slider 3: Session Timeout -->
            <TextView
                android:id="@+id/timeoutLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session Timeout: 30s"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />
            <SeekBar
                android:id="@+id/timeoutSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="50"
                android:progress="20"
                android:progressTint="#00BCD4"
                android:thumbTint="#00BCD4" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10s ← → 60s"
                android:textColor="#666666"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <!-- Apply button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/configApplyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply"
                app:backgroundTint="#00BCD4"
                app:cornerRadius="12dp" />
        </LinearLayout>
    </FrameLayout>

    <!-- ==================== SETTINGS OVERLAY (Bottom Sheet) ==================== -->
    <FrameLayout
        android:id="@+id/settingsOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <!-- Bottom sheet -->
        <LinearLayout
            android:id="@+id/settingsSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_settings_sheet"
            android:orientation="vertical"
            android:padding="32dp"
            android:translationY="500dp">

            <!-- Drag handle -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_settings_handle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_title"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="28dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginEnd="16dp"
                    android:hint="@string/server_ip"
                    app:boxStrokeColor="@color/accent"
                    app:hintTextColor="@color/text_secondary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/settingsIpInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10.251.45.100"
                        android:textColor="@color/text_primary"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/server_port"
                    app:boxStrokeColor="@color/accent"
                    app:hintTextColor="@color/text_secondary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/settingsPortInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8765"
                        android:textColor="@color/text_primary"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/settingsCancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textColor="@color/text_secondary"
                    style="@style/Widget.Material3.Button.TextButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/settingsDisconnectButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disconnect"
                    android:layout_marginStart="12dp"
                    app:strokeColor="@color/status_disconnected"
                    app:strokeWidth="1dp"
                    android:textColor="@color/status_disconnected"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/settingsSaveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:layout_marginStart="12dp"
                    app:backgroundTint="@color/accent_blue"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
